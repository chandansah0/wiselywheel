<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>WiselyWheel</title>
    <style>
      .filters {
        display: flex;
        justify-content: flex-start; /* Changed from space-between */
        align-items: center;
        margin-bottom: 20px;
      }

      .filters button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: transparent;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
        border-bottom: 2px solid transparent;
        margin-right: 10px; /* Reduced margin between buttons */
      }

      .filters button:hover {
        background-color: #f2f2f2;
      }

      .filters button.active {
        border-bottom: 2px solid blue; /* Change color for active button */
      }

      .options-container {
        display: flex;
        justify-content: flex-start; /* Changed from space-between */
        overflow: hidden;
        height: auto; /* Change from 0 to auto */
        transition: height 0.3s ease-out;
      }

      .options-container div {
        flex: 1;
        margin-right: 10px;
      }

      .options-container div:last-child {
        margin-right: 0;
      }

      .options-container button {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        text-align: left;
        border: none;
        background-color: transparent;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      .options-container button:hover {
        background-color: #f2f2f2;
      }

      .options-container .brand-option:hover,
      .options-container .budget-option:hover {
        background-color: lightgray; /* Change color on hover */
      }

      .options-container .budget-option.active {
        background-color: lightgreen; /* Change color for active budget option */
        color: white; /* Change text color */
      }

      .brand-img {
        width: 100px;
        height: auto;
      }
    </style>
  </head>
  <body>
    <header>
      <img src="/image/l2.png" alt="WiselyWheel" width="150mm" height="100mm" />
      <nav>
        <ul>
          <li><a href="index.html">Home</a></li>
          <li><a href="Browsebike.html">Browse Bikes</a></li>
          <li><a href="Comparebike.html">Compare Bikes</a></li>
          <li><a href="admin.html">Admin</a></li>
          <li><a href="aboutus.html">About Us</a></li>
          <li><a href="contact.html">Contact</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <h3>Browse Bike By:</h3>
      <div class="filters">
        <button onclick="showBrandOptions()" id="brandBtn" class="active">
          Brand
        </button>
        <button
          onclick="showBudgetOptions()"
          id="budgetBtn"
          style="padding-right: 20px"
        >
          Budget
        </button>
      </div>

      <div class="options-container" id="optionsContainer">
        <div class="brands-container" id="brandOptions">
          <button class="brand-option" onclick="loadBikesByBrand('honda')">
            <img src="/image/honda.png" alt="Honda" class="brand-img" />
          </button>
          <button class="brand-option" onclick="loadBikesByBrand('yamaha')">
            <img src="/image/yamaha.png" alt="Yamaha" class="brand-img" />
          </button>
          <button class="brand-option" onclick="loadBikesByBrand('bajaj')">
            <img src="/image/bajaj.png" alt="Bajaj" class="brand-img" />
          </button>
          <button class="brand-option" onclick="loadBikesByBrand('tvs')">
            <img src="/image/tvs.webp" alt="TVS" class="brand-img" />
          </button>
        </div>
        <div class="budgets-container" id="budgetOptions" style="display: none">
          <button class="budget-option" onclick="loadBikesByBudget('150000')">
            Under ₹1.5 lakh
          </button>
          <button class="budget-option" onclick="loadBikesByBudget('180000')">
            Under ₹1.8 lakh
          </button>
          <button class="budget-option" onclick="loadBikesByBudget('200000')">
            Under ₹2 lakh
          </button>
          <button class="budget-option" onclick="loadBikesByBudget('250000')">
            Under ₹2.5 lakh
          </button>
          <button class="budget-option" onclick="loadBikesByBudget('100000')">
            Under ₹3 lakh
          </button>
          <button class="budget-option" onclick="loadBikesByBudget('350000')">
            Under ₹3.5 lakh
          </button>
          <button class="budget-option" onclick="loadBikesByBudget('400000')">
            Under ₹4 lakh
          </button>
          <button class="budget-option" onclick="loadBikesByBudget('500000')">
            Above ₹5 lakh
          </button>
        </div>
      </div>

      <div id="bikeList"></div>
    </main>

    <footer>
      <p>&copy; 2024 WiselyWheel. All rights reserved.</p>
    </footer>

    <script src="/javascripts/script2.js"></script>
    <script>
      function showBrandOptions() {
        document.getElementById("brandOptions").style.display = "flex";
        document.getElementById("budgetOptions").style.display = "none";
        document.getElementById("brandBtn").classList.add("active");
        document.getElementById("budgetBtn").classList.remove("active");
      }

      function showBudgetOptions() {
        document.getElementById("budgetOptions").style.display = "flex";
        document.getElementById("brandOptions").style.display = "none";
        document.getElementById("budgetBtn").classList.add("active");
        document.getElementById("brandBtn").classList.remove("active");
      }

      function loadBikesByBrand(brand) {
        fetch(`/api/bikefeatures?brand=${brand}`)
          .then((response) => response.json())
          .then((bikes) => displayBikes(bikes))
          .catch((error) => console.error("Error fetching bikes:", error));
      }

      function loadBikesByBudget(budget) {
        fetch(`/api/bikefeatures?budget=${budget}`)
          .then((response) => response.json())
          .then((bikes) => displayBikes(bikes))
          .catch((error) => console.error("Error fetching bikes:", error));
      }

      function displayBikes(bikes) {
        const bikeList = document.getElementById("bikeList");
        bikeList.innerHTML = "";
        bikes.forEach((bike) => {
          const listItem = document.createElement("div");
          listItem.innerHTML = `
          <div class="bike-item">
            <img src="${bike.image}" alt="${bike.name}" />
            <h4>${bike.name}</h4>
            <p>Price: ${bike.price}</p>
            <p>Features: ${bike.features}</p>
          </div>`;
          bikeList.appendChild(listItem);
        });
      }
    </script>
  </body>
</html>
