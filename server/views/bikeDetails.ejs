<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bike Details</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>Bike Details</h1>
    <table>
      <tr>
        <th>Brand</th>
        <th>Variant Name</th>
        <th>Price</th>
        <th>Engine Type</th>
        <th>Displacement</th>
        <th>Max Torque</th>
        <th>Cooling System</th>
        <th>Valve Per Cylinder</th>
        <th>Starting</th>
        <th>Fuel Supply</th>
        <th>Clutch</th>
        <th>Ignition</th>
        <th>Mileage</th>
        <th>Body Type</th>
        <th>0-100 Kmph (sec)</th>
        <th>Peak Power</th>
        <th>Transmission</th>
      </tr>
      <% bikes.forEach(bike => { %>
      <tr>
        <td><%= bike.brand %></td>
        <td><%= bike.variant_name %></td>
        <td><%= bike.price %></td>
        <td><%= bike.engine_type %></td>
        <td><%= bike.displacement %></td>
        <td><%= bike.max_torque %></td>
        <td><%= bike.cooling_system %></td>
        <td><%= bike.valve_per_cylinder %></td>
        <td><%= bike.starting %></td>
        <td><%= bike.fuel_supply %></td>
        <td><%= bike.clutch %></td>
        <td><%= bike.ignition %></td>
        <td><%= bike.mileage %></td>
        <td><%= bike.body_type %></td>
        <td><%= bike.acceleration_time %></td>
        <td><%= bike.peak_power %></td>
        <td><%= bike.transmission %></td>
      </tr>
      <% }); %>
    </table>
    <% if (bikes.length > 0) { %>
    <img src="<%= bikes[0].image_url %>" alt="Bike Image" />
    <% } %>
    <a href="/">Back to Search</a>
    <script>
      const urlParams = new URLSearchParams(window.location.search);
      const bikeId = urlParams.get("id");

      fetch(`/api/bikefeatures/${bikeId}`)
        .then((response) => response.json())
        .then((bike) => {
          const bikeDetailsContainer = document.getElementById("bikeDetails");
          const row = document.createElement("tr");
          row.innerHTML = `
                    <td>${bike.brand}</td>
                    <td>${bike.variant_name}</td>
                    <td>${bike.price}</td>
                    <!-- Add other columns as needed -->
                `;
          bikeDetailsContainer.appendChild(row);
        })
        .catch((error) => console.error("Error loading bike details:", error));
    </script>
  </body>
</html>
