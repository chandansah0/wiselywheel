<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/admin.css" />
    <title>Admin Dashboard</title>
    <style>
      
      #filterResults {
        margin-top: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        overflow-x: auto; 
      }

      #filterResults table {
        width: 100%;
        border-collapse: collapse;
      }

      #filterResults th,
      #filterResults td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
        text-align: left;
      }

      #filterResults th {
        background-color: #f2f2f2;
      }
            
      #filterResults tbody tr:nth-child(even) {
        background-color: #f5f5f5;
      }

      #filterResults td:nth-child(odd) {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Admin Dashboard</h1>

    <div>
      <h2>Fetched Data</h2>
      <pre id="fetchedData"></pre>
    </div>

    <div>
      <h2>Filter Data</h2>
      <form id="filterForm">
        <label for="filterField">Filter Field:</label>
        <select id="filterField" name="filterField">
          <option value="variant_name">Variant Name</option>
          <option value="Engine Type">Engine Type</option>
        </select>

        <label for="filterValue">Filter Value:</label>
        <input type="text" id="filterValue" name="filterValue" />

        <button type="submit">Filter</button>
      </form>
    </div>

    <div id="filterResults"></div>

    <script src="/javascripts/admin.js"></script>
  </body>
</html>
